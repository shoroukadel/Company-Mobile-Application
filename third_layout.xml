<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/textpath"
            android:layout_height="500dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/emp1"
                android:id="@+id/imageView9"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
            android:text="Phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:textColor="@color/darkblue2"
            android:id="@+id/textView6"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/email"
            android:layout_alignStart="@+id/email" />


            <TextView
                android:text=" Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:id="@+id/Email"
                android:textSize="18sp"
                android:textColor="@color/darkblue2"
                android:layout_below="@+id/lastname"
                android:layout_alignStart="@+id/email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messageserver"
                android:layout_below="@+id/sendbtu"
                android:textColor="@color/gray2"

                android:textSize="18sp" />

            <TextView

                android:background="@android:color/white"
                android:hint="please upload ypur cv as pdf"
                android:textSize="18dp"
                android:textColor="@color/gray2"
                android:id="@+id/path"
                android:layout_below="@+id/textView91"
                android:layout_alignStart="@+id/textView91"
                android:layout_width="270dp"
                android:layout_height="40dp" />

            <TextView
                android:text="CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:textColor="@color/darkblue2"
                android:id="@+id/textView91"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/phone"
                android:layout_alignStart="@+id/phone" />

            <EditText
                android:layout_height="25dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone"
                android:layout_marginRight="40dp"
                android:textColor="@color/darkblue2"
                android:background="@color/darkred"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_width="300dp" />


            <ImageButton
                android:layout_width="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_upload_you_tube"
                android:id="@+id/open"
                android:layout_alignTop="@+id/path"
                android:layout_alignParentEnd="true"
                android:layout_height="40dp"
                android:elevation="14dp"
                android:onClick="open" />

            <Button
                android:text="Send"
                android:id="@+id/sendbtu"
                android:background="@color/darkblue2"
                style="@style/login"
                android:layout_width="150dp"

                 android:layout_marginBottom="10dp"

                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
               android:layout_below="@+id/path"
                android:textSize="24sp"
                android:elevation="14dp"
                android:onClick="sendbtu" />
            <TextView
                android:text="Last Name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/darkblue2"
                android:id="@+id/last"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/firstname"
                android:layout_alignStart="@+id/email" />


            <TextView
                android:text=" First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:id="@+id/first"
                android:textSize="18sp"
                android:textColor="@color/darkblue2"
                android:layout_below="@+id/imageView9"
                android:layout_alignStart="@+id/email" />

            <EditText
                android:layout_height="25dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/darkblue2"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:id="@+id/lastname"
                android:background="@color/darkred"
                android:layout_below="@+id/last"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_width="300dp" />

            <EditText
                android:layout_height="25dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/darkblue2"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                android:id="@+id/firstname"
                android:background="@color/darkred"
                android:layout_below="@+id/first"
                android:layout_alignParentStart="true"
                android:layout_marginStart="29dp"
                android:layout_width="300dp" />

            <EditText
                android:layout_height="25dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/darkblue2"
                android:textSize="18dp"
                android:layout_marginTop="13dp"
                android:id="@+id/email"
                android:background="@color/darkred"
                android:layout_width="300dp"
                android:layout_below="@+id/Email"
                android:layout_alignStart="@+id/lastname" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>