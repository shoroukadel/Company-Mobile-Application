<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:background="@android:color/background_light"
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/pr2"
                android:id="@+id/imageView12"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_height="100dp"
                app:srcCompat="@drawable/pr1"
                android:id="@+id/imageView13"
                android:layout_width="300dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView12"
                android:layout_marginTop="11dp" />
            <TextView
                android:text="Name"
                android:layout_width="100dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Email"
                android:layout_width="100dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/textView11"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Phone"
                android:layout_width="100dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/textView12"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_height="40dp" />

            <TextView
                android:text="  please insert your contact information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@color/gray4"
                android:id="@+id/textView7"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/imageView13"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Requirments"
                android:layout_width="120dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:id="@+id/req"
                android:textStyle="bold"
                android:layout_height="40dp"
                android:layout_below="@+id/phonee"
                android:layout_alignStart="@+id/textView12" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:background="@color/darkred"
                android:ems="10"
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Send"
                android:gravity="center"
                android:background="@color/darkblue2"
                android:id="@+id/sendit"
                android:elevation="13dp"
                android:onClick="sendit"
                android:layout_below="@+id/requirments"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView12"
                android:textColor="@android:color/background_light"
                android:visibility="visible" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@color/darkred"
                android:id="@+id/email"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:background="@color/darkred"
                android:id="@+id/phonee"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />

            <EditText
                android:layout_width="300dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:background="@color/darkred"
                android:id="@+id/requirments"
                android:layout_height="80dp"
                android:layout_below="@+id/req"
                android:layout_alignStart="@+id/req" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>