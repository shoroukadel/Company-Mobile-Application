<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/p1"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:paddingLeft="8dp"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Mobile App for new company"
        android:background="@color/brown" />

    <TextView
        android:id="@+id/description"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
       android:layout_below="@+id/name"
        android:paddingLeft="8dp"
        android:text="the colleague have many branches ,the app was created for students and staff.the student can see his results and schedule ,also doctors can revrse their lectures"
        android:textSize="18sp"
        android:background="@android:color/transparent" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView13"
        android:textColor="@color/darkblue"

        android:paddingLeft="8dp"

        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/version" />

    <TextView
        android:text="five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textColor="@color/black"

        android:textSize="18sp"

        android:textStyle="bold"
        android:id="@+id/version"
        android:layout_below="@+id/status"
        android:layout_alignStart="@+id/status" />

    <TextView
        android:text="Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView15"
        android:textColor="@color/darkblue"

      android:paddingLeft="8dp"

        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/version"
        android:layout_alignBottom="@+id/version"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/status"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Finished"
        android:textSize="16sp"
        android:layout_below="@+id/description"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginStart="52dp" />

    <android.support.v4.view.ViewPager
        android:id ="@+id/view_pager"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="200dp"
        android:layout_marginTop="43dp"
        android:layout_width="320dp"
        android:layout_below="@+id/version"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"></android.support.v4.view.ViewPager>
    <ImageButton
        app:srcCompat="@drawable/send8"
        android:id="@+id/ticket"
        android:onClick="ticket"
        android:elevation="24dp"
        android:scaleType="fitXY"

        android:layout_marginTop="460dp"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="10dp"


        android:background="@android:color/transparent"
        android:layout_height="52dp"
        android:layout_width="51dp" />
</RelativeLayout>