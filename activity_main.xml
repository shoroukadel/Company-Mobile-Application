<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:background="@color/gray2"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
  >


    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/texttm"
        android:layout_marginStart="138dp"
        android:textColor="@color/gray4"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/gray4"
        android:textStyle="bold|italic"
        android:id="@+id/mobile"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/marketing"
        android:layout_alignStart="@+id/marketing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/gray4"
        android:textStyle="bold|italic"
        android:id="@+id/marketing"
        android:layout_below="@+id/web"
        android:layout_alignStart="@+id/web" />

    <ImageView
        app:srcCompat="@drawable/tmslineback"
        android:scaleType="fitXY"

        android:id="@+id/imageView8"
        android:cropToPadding="false"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"

        android:textColor="@color/gray3"
        android:gravity="center"
        android:textStyle="italic"
        android:id="@+id/texttm"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="125dp" />

</RelativeLayout>
